params {
    genotypes = "data/chr*.{pgen,bim}"
    genotypes_bim_bed = "data/chr*.{bim,bed}"
    fam = "data/ukb15479.fam"
    ids_to_include = "data/ids_to_include.txt"
    phenotypes_file = "data/ukb43755.tab"
    phenotypes_to_include = "data/phenotypes_to_include.txt" 
    proj = "sens2017538"

    hardcalls = "https://biobank.ndph.ox.ac.uk/showcase/showcase/auxdata/ukb_snp_bim.tar"

    genotypes_bgen = "results/genotypes/*{.bgen,sample}"
    genotypes_filtered = "results/genotypes/*{bim,bed,fam}"
    hardcalls_filtered = "results/genotypes/hardcalls/*{bim,bed,fam}"
    hardcalls_merged = "results/genotypes/hardcalls_merged.{bim,bed,fam}"

}

profiles {
    bianca {
        process.executor = "slurm"
        process.clusterOptions = "-A ${params.proj} -p core"
        singularity {
            enabled = true
        }
        process {
            withLabel: "plink1" {
                module = "bioinfo-tools:plink"
            }
            withLabel: "plink2" {
                module = "bioinfo-tools:plink2"
                cpus = 8
                time = { 6.hour * task.attempt }
                maxRetries = 3
            }
            withLabel: "plink_dev" {
                container = "/castor/project/proj_nobackup/containers/plink_dev_latest.sif"
                cpus = 8
            }
            withLabel: "bolt" {
                module = "bioinfo-tools:BOLT-LMM"
                singularity.enabled = true
                cpus = 16
                time = { 120.hour * task.attempt }
                maxRetries = 2
            }
            withLabel: "saige" {
                container = "/castor/project/proj_nobackup/containers/r-saige_0.44.0--r36h46a96fe_0.sif"
                singularity.enabled = true
                cpus = 8
                time = { 12.hour * task.attempt }
                maxRetries = 3
            }
            withLabel: "R" {
                module = "R_packages"
                cpus = 2
            }

            withName: make_phenotypes {
                cpus = 8
                time = "1h"
            }
            withName: merge_chromosomes {
                time = "10h"
            }
            withName: regenie {
                container = '/path/to/singularity.img'
                singularity.enabled = true
            }
        }
    }
}